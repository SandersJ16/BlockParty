<?xml version="1.0"?>
<ruleset name="BlockPartyStandard">
    <description>The coding standard for Sanderj16/BlockParty</description>
    <file>src</file>
    <file>tests</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <rule ref="PSR2">
        <exclude name="PSR2.Namespaces.UseDeclaration"/>
        <exclude name="Generic.Files.LineLength"/>
    </rule>
</ruleset>
